<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.SettingsActivity"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/contentBodyColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewall"
                android:background="@drawable/textview_background_selector">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileCircleImageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorToday"
                    android:src="@drawable/ic_doctor"

                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/usernameTextView"
                    style="@style/viewParent.headerText"
                    android:text="Doctor Badio"

                    android:textSize="18sp"
                    android:layout_toRightOf="@id/profileCircleImageView"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/textColor" />

                <TextView
                    style="@style/viewParent.headerText"
                    android:text="doctor@gmail.com"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:id="@+id/email"
                    android:layout_below="@id/usernameTextView"
                    android:layout_toRightOf="@id/profileCircleImageView"/>

                <ImageView
                    android:id="@+id/showmoreusername"
                    style="@style/viewParent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/ic_more"
                   />

            </RelativeLayout>


            <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:text="Profile"/>

            <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableLeft="@drawable/ic_edit_profile"
                android:textColor="@color/textColor"
                android:id="@+id/editProfileTextView"
                android:text="Edit Profile"
                android:background="@drawable/textview_background_selector"  />

            <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:layout_width="369dp"
                android:id="@+id/changepassword"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_edit_password"
                android:text="Change Username  &amp; Password "
                android:textColor="@color/textColor"
                android:background="@drawable/textview_background_selector"  />

            <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:text="Notifications"/>

            <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:checked="true"
                android:id="@+id/aboutus"
                android:textColor="@color/textColor"
                android:drawableLeft="@drawable/ic_about"
                android:text="About Doctor Scheduling"
                android:background="@drawable/textview_background_selector" />

            <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:textColor="@color/textColor"
                android:drawableLeft="@drawable/ic_help"
                android:text="Help "
                android:id="@+id/btn_help"
                android:background="@drawable/textview_background_selector"
                />

            <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableLeft="@drawable/ic_legal"
                android:id="@+id/privacyPolicyTextView"
                android:textColor="@color/textColor"
                android:text="Privacy and Policy"
                android:background="@drawable/textview_background_selector" />

            <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:id="@+id/logout"
                android:drawableLeft="@drawable/ic_logout"
                android:textColor="@color/red"
                android:text="Logout"
                android:background="@drawable/textview_background_selector" />


            <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:id="@+id/appVersionTextView"
                android:text="App ver "
                android:textColor="@color/textColor"
                android:textAlignment="center"/>

        </LinearLayout>
    </ScrollView>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ssssss"
            app:itemTextColor="@drawable/ss111"
            app:menu="@menu/menu_bar" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>