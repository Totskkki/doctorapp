<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PrivacyPolicyActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Privacy Policy Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_title"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <!-- Last Updated -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_last_updated"
                android:textColor="@color/textColorSecondary"
                android:textSize="14sp"
                android:paddingBottom="16dp" />

            <!-- Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_intro"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Data We Collect -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_collection_title"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_personal"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_scheduling"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_usage"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Repeat similar sections for other titles and content -->
            <!-- How We Use Your Data -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_usage_title"
                android:textColor="@color/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_usage_1"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_usage_2"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy_data_usage_3"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:paddingBottom="16dp" />

            <!-- Add the remaining sections: Data Sharing, Data Security, Your Rights, Changes to this Policy, Contact Us -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
