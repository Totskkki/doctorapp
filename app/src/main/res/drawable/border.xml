<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Main background -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="89dp"> <!-- Adjust height to just reach the bottom -->
        <!-- Bottom border only -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray"/> <!-- Border color -->
            <size android:height="1dp"/> <!-- Border thickness -->
        </shape>
    </item>
</layer-list>
